@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Gamesa CIR</title>
    @Styles.Render("~/Content/login/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/Master/css")
    <link href="~/Content/animate.css" rel="stylesheet" />
    <script src="~/Scripts/DatatablesJS/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/DatatablesCss/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular.js"></script>

   
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    
    <script src="~/Scripts/jquery.cookie.js"></script>
    
    <script src="~/Scripts/DatatablesJS/angular-datatables.directive.js"></script>

    <script src="~/Scripts/DatatablesJS/angular-datatables.instances.js"></script>
    <script src="~/Scripts/DatatablesJS/angular-datatables.util.js"></script>
    <script src="~/Scripts/DatatablesJS/angular-datatables.renderer.js"></script>
    <script src="~/Scripts/DatatablesJS/angular-datatables.factory.js"></script>
    <script src="~/Scripts/DatatablesJS/angular-datatables.options.js"></script>
    <script src="~/Scripts/DatatablesJS/angular-datatables.js"></script>

    <script src="~/CIRScripts/Common/AngularModule.js"></script>
    <script src="~/CIRScripts/Common/AngularService.js"></script>
    <script src="~/CIRScripts/Common/jsMaster.js" type="text/javascript"></script>
    <script type="text/javascript">

        var LoginCredentialsUrl = "@Url.Action("LoginCredentials", "Login")";
        var DashBoardUrl = "@Url.Action("Index", "DashBoard")";
        var LoginUrl = "@Url.Action("Index", "Login")";
        var ChangePwdUrl = "@Url.Action("ChangePassword", "Login")";
        var ChangePwdAttemptUrl = "@Url.Action("ChangePwdAttempt", "Login")";
        var SetForgetPasswordUrl = "@Url.Action("SetForgetPassword", "Login")";
        
    </script>
    @Scripts.Render("~/bundles/Master/js")
    <script src="~/CIRScripts/jsLoginController.js" type="text/javascript"></script>
    <style type="text/css">
        body {
            background-repeat: no-repeat;
            background-size: cover;
        }

        html {
            height: 100%;
        }
    </style>
</head>
<body id="bdyLogin" ng-app="CIRModule" ng-controller="Login_OperController">
    <div class="log-div">
        <table class="log-tbl" cellpadding="0" cellspacing="0">
            <tr>
                <td style="width: 100%; height: 80px;">
                    <img style="margin-left: 15px;height: 50px;" src="~/Content/img/loginlogo.png" />
                    <img style="float: right; margin-right: 5px;" src="~/Content/img/gkmp.png" />
                </td>
            </tr>
            <tr>
                <td style="width: 100%; height: 153px;">
                    <table class="log-tbl" cellpadding="0" cellspacing="0">
                        <tr>
                            <td align="center" style="width: 30%;">
                                <img src="~/Content/img/user-login.png" />
                            </td>
                            <td style="width: 55%;">
                                <table class="log-tbl" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td style="width: 100%; height: 42px; border-bottom: 1px #ccc dotted;">
                                            <input type="text" id="txtUserName" ng-model="UserName" placeholder="Username" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width: 100%; height: 42px;">
                                            <input type="password" id="txtPassword" ng-model="Password" placeholder="Password" />
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td align="right" style="width: 15%;">
                                <a style="cursor: pointer;" id="btnLogin" ng-click="Login()">
                                    <img src="~/Content/img/lock-png.png" /></a>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td style="height: 50px; border-top: 1px #ccc dotted;">
                    <a style="float: left; margin-left: 15px;" href="#" onclick="fnShowModal()">Forgot Password ?</a>
                    @*<a style="float: right; margin-right: 15px;" href="#">Need Help ?</a>*@
                </td>
            </tr>
        </table>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Forgot Password</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-6">
                            <span>SAP Code</span>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-6">
                            <input type="text" ng-model="SapCode" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-6">
                            <span>ICH Code</span>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-6">
                            <input type="text" ng-model="ICHCode" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <a href="#" class="btn btn-default SaveButton" ng-click="SendMail()">Send Mail</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    function fnShowModal() {
        $("#myModal").modal("show");
    }
    $("#bdyLogin").css("background-image", 'url(' + LoginCredentialsUrl.split('Login/LoginCredentials')[0] + 'Content/img/login-bg.jpg)');
</script>

