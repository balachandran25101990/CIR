@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    var SetChangePasswordUrl = "@Url.Action("SaveChangePassword", "Admin")";
    var GetPageUrl = "@Url.Action("GetPage", "PageMaster")";
    var SaveFilesUrl = "@Url.Action("SaveFiles", "Admin")";
    var GetFilesUrl = "@Url.Action("GetFiles", "Admin")";
    var DeleteFilesurl = "@Url.Action("DeleteFiles", "Admin")";
</script>
<div class="col-lg-12 pad-0" ng-controller="Admin_OperController">
    <div class="content-part">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <h5 class="heading-h">Change Password</h5>
            </div>
            <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                        <span>Old password</span><span><i class="glyphicon glyphicon-star" style="color: red; font-size: 6px; position: relative; top: -5px; left: 2px;"></i></span>
                        
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                        <input type="password" id="txtOldPassword" ng-model="OldPassword" autocomplete="off" maxlength="50" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 FormcontrolPadding paddingleft0">
                        <span>New password</span><span><i class="glyphicon glyphicon-star" style="color: red; font-size: 6px; position: relative; top: -5px; left: 2px;"></i></span>
                        
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 FormcontrolPadding paddingleft0">
                        <input type="password" id="txtNewPassword" ng-model="NewPassword" autocomplete="off" maxlength="50" pattern=".{5,}" required title="Minimum 5 characters required" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 FormcontrolPadding paddingleft0">
                        <span>Repeat password</span><span><i class="glyphicon glyphicon-star" style="color: red; font-size: 6px; position: relative; top: -5px; left: 2px;"></i></span>
                        
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 FormcontrolPadding paddingleft0">
                        <input type="password" ng-model="RepeatPassword" id="txtConfirmPassword" autocomplete="off" maxlength="50" pattern=".{5,}" required title="Minimum 5 characters required" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 paddingleft0">
                        <a href="#" class="btn btn-default SaveButton" ng-click="Save()">Save</a>
                        <a href="#" class="btn btn-default ClearButton" ng-click="Clear()">Clear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/CIRScripts/AdminController.js" type="text/javascript"></script>
